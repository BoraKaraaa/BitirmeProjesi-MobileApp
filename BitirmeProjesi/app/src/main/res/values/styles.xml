<resources>
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationViewTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationViewTextAppearanceInactive</item>
    </style>

    <style name="MyBottomNavigationViewTextAppearanceActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyBottomNavigationViewTextAppearanceInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
